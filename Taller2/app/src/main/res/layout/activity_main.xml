<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Botón Contactos -->
    <ImageButton
        android:id="@+id/btnContactos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_contactos"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de contactos" />

    <!-- Botón Cámara o Galería -->
    <ImageButton
        android:id="@+id/btnImagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_camara"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de imagen" />

    <!-- Botón Mapa -->
    <ImageButton
        android:id="@+id/btnMapa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mapa"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de mapa" />
</LinearLayout>
